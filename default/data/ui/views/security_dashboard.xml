<form theme="dark">
  <label>Security Dashboard 1 - ThreatInsight and Zones</label>
  <fieldset submitButton="false">
    <input type="time" token="field1">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Threatinsight and Network Zone Geographic Activity</title>
      <map>
        <search>
          <query>`default_index` (eventType="security.request.blocked" OR eventType="security.threat.detected") | iplocation client.ipAddress | geostats count latfield=lat longfield=lon by outcome.reason</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
        <option name="mapping.choroplethLayer.colorBins">5</option>
        <option name="mapping.choroplethLayer.colorMode">auto</option>
        <option name="mapping.choroplethLayer.maximumColor">0xaf575a</option>
        <option name="mapping.choroplethLayer.minimumColor">0x62b3b2</option>
        <option name="mapping.choroplethLayer.neutralPoint">0</option>
        <option name="mapping.choroplethLayer.shapeOpacity">0.75</option>
        <option name="mapping.choroplethLayer.showBorder">1</option>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.legend.placement">bottomright</option>
        <option name="mapping.map.center">(40.58,4.04)</option>
        <option name="mapping.map.panning">1</option>
        <option name="mapping.map.scrollZoom">0</option>
        <option name="mapping.map.zoom">3</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.showTiles">1</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="mapping.tileLayer.tileOpacity">1</option>
        <option name="mapping.type">marker</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
      </map>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <search>
          <query>`default_index` (eventType="security.request.blocked" OR eventType="security.threat.detected") | table _time,eventType,displayMessage,request.ipChain{}.ip,user_agent,outcome*</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>API Token Activity</title>
      <table>
        <search>
          <query>index=main  eventType="system.api_token*" |iplocation src_ip | table _time,eventType,actor.alternateId,src_ip,target{}.displayName,target{}.id,City,Region,Country,user_agent | sort -_time</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
    <panel>
      <title>Limit Warnings &amp; Violations</title>
      <table>
        <search>
          <query>index=main  (eventType="system*limit*" OR eventType="app*limit*" OR eventType="core*limit" OR eventType="user*limit") |iplocation src_ip | table _time,eventType,actor.alternateId,src_ip,event_type_description,City,Region,Country,user_agent | sort -_time</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>API Weirdness</title>
      <table>
        <search>
          <query>index=main  "debugContext.debugData.requestUri"="/api*" | lookup user_agents http_user_agent as user_agent | search (ua_family!="Chrome" AND ua_family!="Safari" AND ua_family!="Mobile Safari UI/WKWebView" AND ua_family!="Firefox" AND ua_family!="Unknown") | iplocation src_ip | table _time,eventType,debugContext.debugData.requestUri,actor.alternateId,src_ip,target{}.displayName,City,Region,Country,user_agent,ua_os_family,debugContext.debugData.logOnlySecurityData | sort -_time</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>